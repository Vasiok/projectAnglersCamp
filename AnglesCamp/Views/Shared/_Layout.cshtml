<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Anglers Camp</title>        
    <link href="~/Content/MyStyles.css" rel="stylesheet"  type="text/css"/>    
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    
    <script src="~/Scripts/modernizr-2.6.2.js"></script>

</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">    
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Anglers Camp", "Index", "Home", new { area = "Common" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">     
                    <li>@Html.ActionLink("Home", "Index", new { Controller = "Home", Area = "Common" })</li>
                    <li>@Html.ActionLink("Venues", "Index", new { Controller = "WaterLevel", Area = "Common" })</li>                                                                                                                                                              

                    @if (User.Identity.IsAuthenticated)
                    {
                        if (User.IsInRole("A"))
                        {
                            <li>@Html.ActionLink("Update Water Levels", "Index", new { Controller = "UpdateWaterLevel", Area = "Admin" })</li>
                        }
                        if (User.IsInRole("U") || User.IsInRole("A"))
                        {
                            <li>@Html.ActionLink("Profile", "Index", new { Controller = "Profile", Area = "Member" })</li>
                            <li>@Html.ActionLink("Reports", "Index", new { Controller = "Reports", Area = "Member" })</li>
                            <li>@Html.ActionLink("Levels", "Index", new { Controller = "AWLevel", Area = "Member" })</li>
                            <li>@Html.ActionLink("Forum", "Index", new { Controller = "Forum", Area = "Member" })</li>
                            @*<li>@Html.ActionLink("Clubs", "Index", new { Controller = "Clubs", Area = "Member" })</li>*@
                            <li>@Html.ActionLink("LogOff", "LogOff", new { Controller = "LogIn", Area = "Security" })</li>                            
                            <li>@Html.ActionLink("Welcome Mr/Ms " + @User.Identity.Name, "Index", new { Controller = "Profile", Area = "Member" })</li>
                        }
                    }
                    else
                    {
                        <li>@Html.ActionLink("Log In", "Index", new { Controller = "LogIn", Area = "Security" })</li>
                        <li>@Html.ActionLink("Register", "Index", new { Controller = "Register", Area = "Security" })</li>
                    }            
                   
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer class="col-md-12">
            <blockquote class="pull-right">
                <p>DISCLAIMER: The content of this website, such as graphics, images, text and all other materials, is provided for reference and educational purposes only.</p>
                <small>Alexei Suleac<cite title="Source Title">Student at DBS</cite></small>
            </blockquote>
            <p>&copy; @DateTime.Now.Year - Anglers Camp</p>
        </footer>
    </div>


    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>      
</body>
</html>