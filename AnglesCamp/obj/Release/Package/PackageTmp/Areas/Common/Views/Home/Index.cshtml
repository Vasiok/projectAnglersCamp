
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2></h2>

<iframe src="~/Index.html" style="width:835px; height:360px; max-width:100%; overflow:hidden; border:none;padding:0; margin: 0 auto;margin-top:100px; margin-bottom:50px; display:block;" marginheight="0" marginwidth="0" scrolling="no"></iframe>

<div class="row">
    <div class="col-md-1"></div>    


    <div class="panel panel-primary col-md-5">
        <div class="panel-heading">
            <h3 class="panel-title">Latest News</h3>
        </div>
        <div class="panel-body">
            @{
                var news = (List<BLL.JSONNewsModel>)ViewData["newsData"];
            }

            @foreach (var n in @news)
            { 
                <div class="col-md-1">
                    ●
                </div>
                <div class="col-md-11">
                    <p class="text-primary">
                        <a href="@Url.Content(@n.lastNews.href)" target="_blank">@n.lastNews.text</a>
                    </p>
                </div>
            }

        </div>
    </div>

    <div class="col-md-2"></div>

    <div class="panel panel-primary col-md-3">
        <div class="panel-heading">
            <h3 class="panel-title">Weater Forcast</h3>
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="col-md-1">
                </div>
                <div class="col-md-10">
                    <iframe class="" id="metIEwidget" src="http://www.met.ie/widgets/3daysummary.asp" siz style="border-width:0;" width="200" height="270" frameborder="0" scrolling="no"></iframe>            
                </div>
                <div class="col-md-1"></div>
            </div>
        </div>
    </div>    
   

