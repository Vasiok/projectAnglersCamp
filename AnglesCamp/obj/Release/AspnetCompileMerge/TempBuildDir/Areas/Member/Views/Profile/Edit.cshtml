@model BOL.Member

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/magnific-popup.css" rel="stylesheet" />
<script src="~/Scripts/jquery-1.10.2.js"></script>
<script src="~/Scripts/jquery.magnific-popup.js"></script>
<script>
    $(document).ready(function () {
        $('.image-link').magnificPopup({ type: 'image' });
    });
</script>

<h2>Edit</h2>


@using (Html.BeginForm("Edit", "Profile", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Edit Details</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MemberId)


        <div class="form-group">
            @Html.LabelFor(model => model.MemberPicture, htmlAttributes: new { @class = "label label-primary control-label col-md-2" })
            <div class="col-md-5">               
                <a class="test-popup-link col-md-7" href="@Url.Content(@Model.MemberPicture)"><img src="@Url.Content(@Model.MemberPicture)" id="imgSize" /></a>

                <script>
                    $('.test-popup-link').magnificPopup({
                        type: 'image'
                        // other options
                    });
                </script>
            </div>                        
        </div>

        <div class="form-group hidden">
            @Html.LabelFor(model => model.MemberPicture, htmlAttributes: new { @class = "label label-primary control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.MemberPicture, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MemberPicture, "", new { @class = "text-danger" })
            </div>
        </div>       

        <div class="form-group hidden">
            @Html.LabelFor(model => model.MemberName, htmlAttributes: new { @class = "label label-primary control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.MemberName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MemberName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MemberEmail, htmlAttributes: new { @class = "label label-primary control-label col-md-2" })
            <div class="col-md-5">
                @Html.EditorFor(model => model.MemberEmail, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MemberEmail, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MemberPassword, htmlAttributes: new { @class = "label label-primary control-label col-md-2" })
            <div class="col-md-5">
                @Html.EditorFor(model => model.MemberPassword, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MemberPassword, "", new { @class = "text-danger" })
            </div>
        </div>
        

        <div class="form-group">
            @Html.LabelFor(model => model.MemberClub, htmlAttributes: new { @class = "label label-primary control-label col-md-2" })
            <div class="col-md-5">
                @Html.EditorFor(model => model.MemberClub, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MemberClub, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group hidden">
            @Html.LabelFor(model => model.MemberType, htmlAttributes: new { @class = "label label-primary control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.MemberType, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MemberType, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
